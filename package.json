  "author": "Kitamura Satoshi",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "eslint": "^6.0.0",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.4",
    "typescript": "^3.5.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
